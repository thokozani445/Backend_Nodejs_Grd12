datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  teacher   Teacher?
  student   Student?
}

model Teacher {
  id           Int       @id @default(autoincrement())
  userId       Int       @unique
  user         User      @relation(fields: [userId], references: [id])
  subject      String?
  verified     Boolean   @default(false)
  subscription String?   // e.g. active, expired
  lessons      Lesson[]
  students     Student[]
}

model Student {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  grade     Int
  teacherId Int?
  teacher   Teacher? @relation(fields: [teacherId], references: [id])
}

model Lesson {
  id         Int      @id @default(autoincrement())
  title      String
  content    String?
  fileUrl    String?
  teacherId  Int
  teacher    Teacher  @relation(fields: [teacherId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
